<assembly>
	<id>zip-package</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>${project.build.directory}/strat.mining.stratum.proxy-${project.version}.jar
			</source>
			<outputDirectory>/</outputDirectory>
			<destName>strat.mining.stratum.proxy.jar</destName>
		</file>
		<file>
			<source>${basedir}/LICENCE</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>